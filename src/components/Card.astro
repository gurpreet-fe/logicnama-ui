---
import { Image } from "astro:assets";

const { title, text, link, cover } = Astro.props;
---

<div class="card">
  <div class="card-inner">
    <div class="card-img">
      <Image src={cover} alt="Test" />
    </div>
    <div class="card-content">
      <h3 class="h3 mb-1">{title}</h3>
      <p class="mb-4">{text}</p>
      <a class="stretchable-link" href={link}>More</a>
    </div>
  </div>
</div>

<style>
  .card {
    position: relative;
    max-width: 343px;

    .card-inner {
      display: flex;
      flex-direction: column;
      height: 100%;
      border-radius: 12px;
      border: 1px solid #e1e1e1;
      overflow: hidden;

      &::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;

        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.15);
        border-radius: 12px;

        transition: opacity 0.15s ease-in-out;
      }

      &:hover::before {
        opacity: 1;
      }
    }

    img {
      aspect-ratio: 4/3;
      object-fit: cover;
    }

    .card-content {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      padding: 10px;
      height: 100%;

      a {
        display: inline-block;
        background-color: black;
        border-radius: 6px;
        color: white;
        padding: 2px 8px;
        align-self: end;
        margin-top: auto;
      }
    }
  }
</style>
